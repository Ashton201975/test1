<div class="container">
    
    {{#if promotion}}
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Promotion Table</h2>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-12">
                    <div class="table-wrap">
                        <table class="table table-responsive table-hover">
                            <thead class="thead-primary">
                                <tr>
                                    <th>Prmotion Name</th>
                                    <th>Redemption Per Person</th>
                                    <th>Total Redemption</th>
                                    <th>Promotion Amount</th>
                                    <th>Promotion Code</th>
                                    <th>Start of Promotion</th>
                                    <th>End of Promotion</th>
                                    <th>Promotion Valid</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each promotion}}
                                <tr>
                                    <td>{{PromotionName}}</td>
                                    <td>{{RedemptionPerPerson}}</td>
                                    <td>{{TotalRedemption}}</td>
                                    <td>{{PromotionAmount}}</td>
                                    <td>{{PromotionCode}}</td>
                                    <td>{{formatDate StartOfPromotion 'DD/MM/YYYY'}}</td>
                                    <td>{{formatDate EndOfPromotion 'DD/MM/YYYY'}}</td>
                                    <td>{{ValidPromo}}</td>
                                    <td>
                                        <a href="/promotion/updatePromotions/{{id}}" class="card-link">
                                            <i class="fas fa-pencil-alt"></i>
                                            Edit
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/promotion/deletePromotion/{{id}}" class="card-link" data-toggle="confirmation"
                                            data-title="Confirm delete?">
                                            <i class="fas fa-trash-alt"></i>
                                            Delete
                                        </a>
                                    </td>
                                </tr>
                                {{/each}}

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
    {{else}}
    <h3>No Promotions Created</h3>
    {{/if}}

    <a href="/promotion/checkValidity" class="" id="chechAvalabalityButton">Check Validity</a>

    <br>
    <br>
    <br>
    <br>
    <br>
    <br>

<style>
    #chechAvalabalityButton {
        background-color: #199319;
        color: white;
        padding: 15px 25px;
        text-decoration: none;
        cursor: pointer;
        border: none;
        margin-left: 900px;  
    }
</style>

   